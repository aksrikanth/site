%html{html_attrs, 'xmlns:og' => 'http://opengraphprotocol.org/schema/'}
  %head
    %title= @title.present? ? t('.full_title', :title => @title) : t('.title')
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = auto_discovery_link_tag(:atom, articles_path(:format => :atom))
  %body
    %header.top
      %aside#sidebar.sidebar= render :partial => 'layouts/nav'
      = link_to t('.title'), root_path, :class => 'logo'
      .subtitle
        Everything from cricket to programming.

    %section.main
      = yield
